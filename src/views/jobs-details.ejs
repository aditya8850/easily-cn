<div class="jobs-details">
    <div id="details-container">
        <div class="banner-container"><a href=""><img class="d-block w-100"
                    src="https://files.codingninjas.com/web-banner-28759.png" alt="First slide"></a>
        </div>
        <% if (job) { %>
            <div class="card-body">
                <div class="banner-h1">
                    <h1><span>
                            <%= job.role %>
                        </span> opportunity in <span>
                            <%= job.location%>
                        </span> at <span>
                            <%= job.name %>.
                        </span></h1>
                </div>

                <h4 class="card-title my-1 fw-bold text-info text-uppercase">
                    <%= job.name %>
                </h4>
                <p class="card-role">
                    <span class=" fw-bold" style="font-size:1.4rem;">
                        <%= job.profile %>
                    </span>
                    <%= job.role %>
                </p>
                <p class="card-location fw-bold">
                    <%= job.location %>
                </p>
                <p class="card-salary fw-bold">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-currency-rupee" viewBox="0 0 16 16">
                        <path
                            d="M4 3.06h2.726c1.22 0 2.12.575 2.325 1.724H4v1.051h5.051C8.855 7.001 8 7.558 6.788 7.558H4v1.317L8.437 14h2.11L6.095 8.884h.855c2.316-.018 3.465-1.476 3.688-3.049H12V4.784h-1.345c-.08-.778-.357-1.335-.793-1.732H12V2H4v1.06Z">
                        </path>
                    </svg>
                    <%= job.salary %>
                </p>
                <p class="card-salary fw-bold">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-hourglass-split" viewBox="0 0 16 16">
                        <path
                            d="M2.5 15a.5.5 0 1 1 0-1h1v-1a4.5 4.5 0 0 1 2.557-4.06c.29-.139.443-.377.443-.59v-.7c0-.213-.154-.451-.443-.59A4.5 4.5 0 0 1 3.5 3V2h-1a.5.5 0 0 1 0-1h11a.5.5 0 0 1 0 1h-1v1a4.5 4.5 0 0 1-2.557 4.06c-.29.139-.443.377-.443.59v.7c0 .213.154.451.443.59A4.5 4.5 0 0 1 12.5 13v1h1a.5.5 0 0 1 0 1h-11zm2-13v1c0 .537.12 1.045.337 1.5h6.326c.216-.455.337-.963.337-1.5V2h-7zm3 6.35c0 .701-.478 1.236-1.011 1.492A3.5 3.5 0 0 0 4.5 13s.866-1.299 3-1.48V8.35zm1 0v3.17c2.134.181 3 1.48 3 1.48a3.5 3.5 0 0 0-1.989-3.158C8.978 9.586 8.5 9.052 8.5 8.351z">
                        </path>
                    </svg>
                    Apply Before: <%= job.applyDate %>
                </p>
                <p class="card-salary fw-bold">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-bar-chart-fill" viewBox="0 0 16 16">
                        <path
                            d="M1 11a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1v-3zm5-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v7a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V7zm5-5a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1V2z">
                        </path>
                    </svg>
                    Total Openings: <%= job.openings %>
                </p>
                <p class="card-salary fw-bold">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-people-fill" viewBox="0 0 16 16">
                        <path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7Zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm-5.784 6A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1h4.216ZM4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5Z"></path>
                      </svg>
                    Applicants: <%= result %>
                </p>

                <% job.skills.forEach((skill)=> { %>
                    <span class="skills-tags">
                        <%= skill %>
                    </span>

                    <% }); %>
                        <!-- Modal Trigger Button -->
                        <% if(appliedStatus){%>
                            <button class="bg-success apply-now">Applied!</button>
                            <% }else{%>
                                <a href="#myModal" class="bg-info apply-now " data-bs-toggle="modal"> Apply Now</a>
                                <% }%>
                                    <!-- Modal -->
                                    <div id="myModal" class="modal my-modal " tabindex="-1" role="dialog"
                                        aria-labelledby="myModalLabel" aria-hidden="true">
                                        <div class="modal-dialog ">
                                            <div class="modal-content">
                                                <div class="modal-header modal-header2 ">
                                                    <h2>Provide the details to apply</h2>
                                                    <button type="button" class="btn-close modal-close-btn "
                                                        data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body modal-styles">
                                                    <form method="post" action="/jobs/<%= job.id %>/apply"
                                                        enctype="multipart/form-data">
                                                        <div class="form-ele">
                                                            <label for="name">Name:</label>
                                                            <input type="text" id="name" name="name"
                                                                style="width: 100%;">
                                                        </div>
                                                        <div class="form-ele">
                                                            <label for="email">Email:</label>
                                                            <input type="email" id="email" name="email"
                                                                style="width: 100%;">
                                                        </div>

                                                        <div class="form-ele">
                                                            <label for="phone">Phone:</label>
                                                            <input type="tel" id="phone" name="phone"
                                                                style="width: 100%;">
                                                        </div>
                                                        <div class="form-ele">
                                                            <label for="resume">Upload Resume:</label>
                                                            <input type="file" id="resume" name="file">
                                                        </div>
                                                        <button type="submit">Submit</button>
                                                    </form>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% } else { %>
                                        <p>No job details available.</p>
                                        <% } %>
            </div>
    </div>

</div>